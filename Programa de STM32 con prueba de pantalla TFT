/* USER CODE BEGIN PFP */
/* Función para solicitar datos al ESP32 */
void solicitar_lectura_sensor()
{

	uint8_t lectura = '1';
    HAL_UART_Transmit(&huart5, &lectura, 1, 100);

    memset(rxBuffer, 0, sizeof(rxBuffer));

    uint8_t b;
    uint16_t idx = 0;

    // leer hasta '\n' o hasta llenar buffer
    while (idx < sizeof(rxBuffer)-1) {
        if (HAL_UART_Receive(&huart5, &b, 1, 200) == HAL_OK) {
            rxBuffer[idx++] = b;
            if (b == '\n') break;  // terminamos cuando ESP32 manda salto de línea
        } else {
            break; // timeout
        }
    }

    // Enviar al monitor serial
    HAL_UART_Transmit(&huart2, rxBuffer, idx, 100);
}
/* USER CODE END PFP */

